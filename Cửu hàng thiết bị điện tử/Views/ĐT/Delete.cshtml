@model Cửu_hàng_thiết_bị_điện_tử.Models.ĐT

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger rounded-4">
        <div class="card-header bg-danger text-white text-center">
            <h1>Xóa Sản Phẩm</h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger text-center">Bạn có chắc chắn muốn xóa?</h3>
            <hr />
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded-3 border mb-3" style="max-height: 300px;">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Tên Sản Phẩm:</dt>
                        <dd class="col-sm-8">@Model.ProductName</dd>
                        <dt class="col-sm-4">Ngày Sản Xuất:</dt>
                        <dd class="col-sm-8">@Model.ManufactureDate.ToString("dd/MM/yyyy")</dd>
                        <dt class="col-sm-4">Loại:</dt>
                        <dd class="col-sm-8">@Model.Category</dd>
                        <dt class="col-sm-4">Thương Hiệu:</dt>
                        <dd class="col-sm-8">@Model.Brand</dd>
                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8 text-danger fw-bold">@Model.Price.ToString("C")</dd>
                        <dt class="col-sm-4">Kho Hàng:</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>
                        <dt class="col-sm-4">Mô Tả:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
            <div class="text-center mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
